@model BudgetPlanner.Models.Memo.MemoEdit

@{
    ViewBag.Title = "Edit";
}

<div class="custom-header text-center d-flex">
    <span>Edit Memo</span>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="general-use-container form-horizontal">
        <div class="text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TransactionId)

            <div class="general-use-header">
                @Html.LabelFor(model => model.MemoContent, htmlAttributes: new { @class = "control-label" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-12 text-center">
                <div class="col-md-10">

                    @Html.EditorFor(model => model.MemoContent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MemoContent, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Save" class="general-button btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
