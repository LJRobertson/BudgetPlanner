@model IEnumerable<BudgetPlanner.Models.BudgetCategory.BudgetCategoryListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Budget Categories Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
<div class="alert alert-success fade in" role="alert">
    @ViewBag.SaveResult
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BudgetId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BudgetId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { budgetId = item.BudgetId, categoryId = item.CategoryId }) |
            @Html.ActionLink("Details", "Details", new { id = item.BudgetId }) |
            @Html.ActionLink("Delete", "Delete", new { budgetId = item.BudgetId, categoryId = item.CategoryId })
        </td>
    </tr>
}

</table>
