@model IEnumerable<BudgetPlanner.Models.BudgetListItem>

@{
    ViewBag.Title = "Index";
}

<div class="custom-header text-center d-flex">
    <span>Budget Index</span>
</div>

<hr />
<div class="button-wrapper text-center">
    <div class="general-button btn text-center">
        @Html.ActionLink("Create New", "Create")
    </div>

    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">
            @ViewBag.SaveResult
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
</div>
<br />

<div class="general-use-container table-responsive-sm">
    <div class="general-use-header-blue text-center"><span>You have the following Budgets.</span></div>
    <table class="table table-hover">
        <tr class="general-use-header text-center">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.BudgetId)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.BudgetName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.BudgetAmount)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.BudgetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BudgetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BudgetAmount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BudgetId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BudgetId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BudgetId })
                </td>
            </tr>
        }

    </table>
</div>
