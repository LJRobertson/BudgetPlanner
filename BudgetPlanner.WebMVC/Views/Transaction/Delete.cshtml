@model BudgetPlanner.Models.Transaction.TransactionDetail

@{
    ViewBag.Title = "Delete";
}

<div class="custom-header text-center d-flex">
    <span>Transaction Delete</span>
</div>


<h3 class="text-center">Are you sure you want to delete this?</h3>
@if(Model.MemoContent != null)
{
    <h4 class="text-center text-danger">This will also delete the memo for this transaction.</h4>
}

<div>
    <hr />
    <div class="general-use-container d-flex">
        <dl class="dl-horizontal">
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.TransactionId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TransactionId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TransactionDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TransactionDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MerchantName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MerchantName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CategoryId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryId)
            </dd>
            @if (Model.MemoContent != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.MemoContent)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MemoContent)
                </dd>
            }
        </dl>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center">
                <input type="submit" value="Delete" class="general-button btn btn-default" />
                <br />
            </div>
        }
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")

    </div>
</div>

